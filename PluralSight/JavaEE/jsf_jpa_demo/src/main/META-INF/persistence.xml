<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="jsfJpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!--<mapping-file>META-INF/cd_mapping.xml</mapping-file>-->
        <!--<mapping-file>META-INF/listener_mapping.xml</mapping-file>-->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/jsf_jpa"/>
        </properties>
    </persistence-unit>
</persistence>